# Email Configuration
EMAIL_ADDRESS=your.email@gmail.com
GMAIL_CREDENTIALS_PATH=credentials/gmail_credentials.json
GMAIL_TOKEN_PATH=credentials/gmail_token.json

# LLM Configuration
# Choose one: 'ollama' (free, local), 'openai', 'anthropic'
LLM_PROVIDER=ollama
OLLAMA_MODEL=llama2
OLLAMA_BASE_URL=http://localhost:11434

# Optional: If using paid APIs
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Database
DATABASE_PATH=data/conversations.db

# Agent Configuration
CHECK_INTERVAL_SECONDS=300
AUTO_REPLY_ENABLED=true
REQUIRE_APPROVAL=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agent.log

# SMS Configuration (Optional)
# For email-to-SMS gateway
SMS_EMAIL_GATEWAY=@txt.att.net
# Examples: @txt.att.net, @tmomail.net, @vtext.com, @messaging.sprintpcs.com

# Escalation Rules
ESCALATE_ON_SALARY_NEGOTIATION=true
ESCALATE_ON_FINAL_OFFER=true
MIN_SALARY_THRESHOLD=100000

